<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin4"
    android:layout_marginRight="@dimen/margin4"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhiteLight"
    app:cardCornerRadius="@dimen/margin4"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.emusafir.utility.VerticalTextView
                android:id="@+id/tvDateOfBooking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:fontFamily="@font/muli_bold"
                android:gravity="center|bottom"
                android:text="18 Mar"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin8">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingTop="@dimen/margin4"
                        android:paddingBottom="@dimen/margin4"
                        android:text="Indore"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_trending_flat_black_24dp"
                        android:fontFamily="@font/muli_semibold"
                        android:paddingLeft="@dimen/margin4"
                        android:paddingRight="@dimen/margin4"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingTop="@dimen/margin4"
                        android:paddingBottom="@dimen/margin4"
                        android:text="Jaora"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/textSize12" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin1px"
                    android:layout_marginTop="@dimen/margin4"
                    android:layout_marginBottom="@dimen/margin4"
                    android:background="@color/colorHint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="PNR NO"

                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/tvPnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:paddingTop="@dimen/margin2"
                    android:text="15513410111"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/textSize14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin1px"
                    android:layout_marginTop="@dimen/margin4"
                    android:background="@color/colorHint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingTop="@dimen/margin4"
                    android:text="Date of Journey"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/tvDateOfJourney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingTop="@dimen/margin2"
                    android:text="15513410111"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/textSize14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin1px"
                    android:layout_marginTop="@dimen/margin4"
                    android:background="@color/colorHint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin4"
                    android:gravity="center|left"
                    android:paddingBottom="@dimen/margin4">

                    <TextView
                        android:id="@+id/tvPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_bold"
                        android:text="INR 100"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/textSize14" />

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_bold"
                        android:paddingLeft="@dimen/margin8"
                        android:paddingRight="@dimen/margin8"
                        android:text="Payment Failed"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/tvDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:background="@drawable/btn_primary"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/margin8"
                        android:paddingRight="@dimen/margin8"
                        android:paddingTop="@dimen/margin4"
                        android:paddingBottom="@dimen/margin4"
                        android:text="Cancel Ticket"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSize12" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>