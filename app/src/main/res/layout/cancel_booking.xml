<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/margin0"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
>

            <TextView
                android:id="@+id/tvSeatSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Cancel Booking"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/textSize18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="Are you sure you want to cancel this booking?"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tvSeatNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/textSize14" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvNo"
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrice"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryText"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:padding="@dimen/margin8"
                    android:text="No"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize14" />


                <TextView
                    android:id="@+id/tvYes"
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrice"
                    android:layout_toRightOf="@+id/tvFemale"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:padding="@dimen/margin8"
                    android:text="Yes"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize14" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>