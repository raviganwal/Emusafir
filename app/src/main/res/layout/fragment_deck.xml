<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/mCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/drv"
                        android:layout_width="@dimen/margin20"
                        android:layout_height="@dimen/margin20"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/margin30"
                        android:src="@drawable/sterring" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mRecyclerViewLeft1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/margin20"
                            android:layout_marginBottom="@dimen/margin20" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mRecyclerViewLeft2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin20"
                            android:layout_marginBottom="@dimen/margin20"
                            android:layout_toRightOf="@+id/mRecyclerViewLeft1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mRecyclerViewRight3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin20"
                            android:layout_marginBottom="@dimen/margin20"
                            android:layout_toLeftOf="@+id/mRecyclerViewRight2" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mRecyclerViewRight2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin20"
                            android:layout_marginBottom="@dimen/margin20"
                            android:layout_toLeftOf="@+id/mRecyclerViewRight1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mRecyclerViewRight1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/margin20" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mEndRowRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center" />

                    <!--<LinearLayout-->
