<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin4"
    android:layout_marginRight="@dimen/margin4"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhiteLight"
    app:cardCornerRadius="@dimen/margin4"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin8">

            <LinearLayout
                android:id="@+id/linleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/linRight"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBusName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/textSize14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDepartureTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_trending_flat_black_24dp"
                        android:drawablePadding="@dimen/margin2"
                        android:fontFamily="@font/muli_semibold"
                        android:paddingTop="@dimen/margin4"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tvArrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvDepartureTime"
                        android:fontFamily="@font/muli_semibold"
                        android:paddingLeft="@dimen/margin2"
                        android:paddingTop="@dimen/margin4"
                        android:paddingRight="@dimen/margin2"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvArrivalTime"
                        android:text="@string/bullet"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTravelTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tvArrivalTime"
                        android:paddingLeft="@dimen/margin2"
                        android:paddingTop="@dimen/margin4"
                        android:paddingRight="@dimen/margin2"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/margin2"
                        android:paddingTop="@dimen/margin2"
                        android:paddingRight="@dimen/margin2"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvArrivalTime"
                        android:text="@string/bullet"
                        android:textColor="@color/colorSecondaryText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSeats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tvType"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/margin2"
                        android:paddingTop="@dimen/margin2"
                        android:paddingRight="@dimen/margin2"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/textSize12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="300"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="@dimen/margin20"
                    android:layout_height="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin4"
                    android:background="@drawable/rect_green"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center"
                    android:padding="@dimen/margin2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize10" />

                <TextView
                    android:id="@+id/tvReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin1"
                    android:fontFamily="@font/muli_extra_light"
                    android:text="See all reviews"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/textSize8"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/margin8"
                android:paddingRight="@dimen/margin8"
                android:paddingBottom="@dimen/margin8">

            </LinearLayout>

            <TextView
                android:layout_toRightOf="@+id/mLinearLayout"
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin4"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/margin10" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
